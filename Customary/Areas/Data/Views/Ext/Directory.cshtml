                            selModel: 'rowmodel',
                            /*selModel: Ext.create("Ext.selection.RowModel", {
                                selType: "rowmodel",
                                listeners: {
                                    selectionchange: {
                                        fn: onRecordSelectionChange(selModel, selections),
                                        scope: this
                                    }
                                }
